# Auto-SEO Environment Variables
# Copy this file to .env and update values for your environment

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=autoseo
POSTGRES_PASSWORD=autoseo_secret
POSTGRES_DB=autoseo

# Database connection URL (for services)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secret
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0

# =============================================================================
# RabbitMQ Configuration
# =============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=autoseo
RABBITMQ_PASSWORD=rabbitmq_secret
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/

# =============================================================================
# ClickHouse Configuration (Analytics)
# =============================================================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=autoseo
CLICKHOUSE_PASSWORD=clickhouse_secret
CLICKHOUSE_DB=autoseo_analytics

# =============================================================================
# MinIO Configuration (S3-compatible storage)
# =============================================================================
MINIO_HOST=localhost
MINIO_API_PORT=9002
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_secret
MINIO_ENDPOINT=http://${MINIO_HOST}:${MINIO_API_PORT}

# S3-compatible settings (for services)
S3_ENDPOINT=${MINIO_ENDPOINT}
S3_ACCESS_KEY=${MINIO_ROOT_USER}
S3_SECRET_KEY=${MINIO_ROOT_PASSWORD}
S3_BUCKET_CONTENT=autoseo-content
S3_BUCKET_IMAGES=autoseo-images
S3_BUCKET_EXPORTS=autoseo-exports
S3_BUCKET_BACKUPS=autoseo-backups

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=grafana_secret

# =============================================================================
# Application Configuration
# =============================================================================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-change-in-production
LOG_LEVEL=DEBUG

# =============================================================================
# API Gateway Configuration
# =============================================================================
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=0.0.0.0
RATE_LIMIT_PER_USER_MINUTE=100
RATE_LIMIT_PER_WORKSPACE_MINUTE=1000

# =============================================================================
# Auth Service Configuration
# =============================================================================
AUTH_SERVICE_PORT=8081
JWT_SECRET_KEY=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# =============================================================================
# Notification Service Configuration
# =============================================================================
NOTIFICATION_SERVICE_PORT=8082

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@autoseo.com
SMTP_FROM_NAME=Auto-SEO Platform
SMTP_TLS=true

# SendGrid (alternative to SMTP)
SENDGRID_API_KEY=

# Slack Configuration
SLACK_WEBHOOK_URL=

# =============================================================================
# Content Generator Service Configuration
# =============================================================================
CONTENT_GENERATOR_PORT=8086

# OpenAI Configuration (required for content generation)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# Docker Configuration
# =============================================================================
COMPOSE_PROJECT_NAME=autoseo
DOCKER_REGISTRY=ghcr.io/your-org/autoseo

# =============================================================================
# Kubernetes Configuration (for deployment)
# =============================================================================
K8S_NAMESPACE=autoseo-dev
K8S_CONTEXT=your-k8s-context
